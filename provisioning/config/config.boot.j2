firewall {
    interface eth0 {
        in {
            name WAN-IN
        }
        local {
            name WAN-LOCAL
        }
    }
    name WAN-IN {
        default-action drop
        rule 10 {
            action accept
            state {
                established enable
                related enable
            }
        }
        rule 30 {
            action accept
            state {
                new enable
            }
            destination {
                address {{ cluster_ip }}
                port 80,443
            }
            protocol tcp
        }
    }
    name WAN-LOCAL {
        default-action drop
        rule 10 {
            action accept
            state {
                established enable
                related enable
            }
        }
        rule 20 {
            action accept
            icmp {
                type-name echo-request
            }
            protocol icmp
            state {
                new enable
            }
        }
        rule 30 {
            action drop
            destination {
                port 22
            }
            protocol tcp
            recent {
                count 4
                time minute
            }
            state {
                new enable
            }
        }
        rule 31 {
            action accept
            destination {
                port 22
            }
            protocol tcp
            state {
                new enable
            }
        }
    }
}
interfaces {
    ethernet eth0 {
        address dhcp
        description WAN
    }
    ethernet eth1 {
        address {{ gateway_cidr }}
        description LAN
    }
    loopback lo {
    }
}
nat {
    source {
        /*if it's outbound, nat out*/
        rule 100 {
            outbound-interface any
            source {
                address {{ network_cidr }}
            }
            translation {
                address masquerade
            }
        }
    }

    destination {
        /* port forward from wan */
        rule 30 {
            description web-server-wan
            destination {
                port 80,443
            }
            inbound-interface eth0
            protocol tcp
            translation {
                address {{ cluster_ip }}
            }
        }
    }
}
protocols {
    static {
        arp {
            interface eth1 {
                address {{ aster.addr }} {
                    mac {{ aster.mac }}
                }
                address {{ bernadette.addr }} {
                    mac {{ bernadette.mac }}
                }
                address {{ charlie.addr }} {
                    mac {{ charlie.mac }}
                }
            }
        }
    }
}
service {
    dhcp-server {
        shared-network-name LAN {
            subnet {{ network_cidr }} {
                default-router {{ gateway_addr }}
                domain-name {{ domain }}
                lease 86400
                name-server {{ gateway_addr }}
                range 0 {
                    start {{ dhcp.start }}
                    stop {{ dhcp.end }}
                }
                static-mapping aster {
                    ip-address  {{ aster.addr }}
                    mac-address {{ aster.mac }}
                }
                static-mapping bernadette {
                    ip-address  {{ bernadette.addr }}
                    mac-address {{ bernadette.mac }}
                }
                static-mapping charlie {
                    ip-address  {{ charlie.addr }}
                    mac-address {{ charlie.mac }}
                }
            }
        }
    }
    dns {
        forwarding {
            name-server 9.9.9.9
            name-server 8.8.8.8
            allow-from {{ network_cidr }}
            authoritative-domain {{ domain }} {
                records {
                    a gateway {
                        address {{ gateway_addr }}
                    }
                    a proxy {
                        address {{ proxy.addr }}
                    }
                    a aster {
                        address {{ aster.addr }}
                    }
                    a bernadette {
                        address {{ bernadette.addr }}
                    }
                    a charlie {
                        address {{ charlie.addr }}
                    }
                }
            }
            cache-size 0
            listen-address {{ gateway_addr }}
        }
    }
    ntp {
        allow-client {
            address 0.0.0.0/0
            address ::/0
        }
        server time1.vyos.net {
        }
        server time2.vyos.net {
        }
        server time3.vyos.net {
        }
    }
    ssh {
        disable-password-authentication
        port 22
    }
}

system {
    name-server 9.9.9.9
    name-server 8.8.8.8
    config-management {
        commit-revisions 100
    }
    conntrack {
        modules {
            ftp
            h323
            nfs
            pptp
            sip
            sqlnet
            tftp
        }
    }
    console {
        device ttyS0 {
            speed 115200
        }
    }
    domain-search {
        domain {{ domain }}
    }
    host-name gateway
    login {
        user vyos {
            authentication {
                plaintext-password {{ vyos_password }}
                public-keys clementine {
                    key ""
                    type ssh-rsa
                }
                public-keys dwbrite {
                    key " cardno:19 197 571"
                    type ssh-rsa
                }
            }
        }
    }
    syslog {
        global {
            facility all {
                level info
            }
            facility local7 {
                level debug
            }
        }
    }
}
